class Pessoa:
    def __init__(self, nome, peso, idade, comendo=False, dormindo=False, falando=False):
        self.nome = nome
        self.peso = peso
        self.idade = idade
        self.comendo = comendo
        self.dormindo = dormindo
        self.falando = falando

    def comer(self):
        if self.falando:
            print(f"{self.nome} tem que parar de falar antes de ir comer")
        elif self.dormindo:
            print(f"{self.nome} tem que acordar antes de ir comer")
        else:
            if self.comendo:
                print(f"{self.nome} já tá comendo")
            else:
                print(f"{self.nome} foi comer")
                self.comendo = True

    def parar_comer(self):
        if not self.comendo:
            print(f"{self.nome} não tá comendo")
        else:
            print(f"{self.nome} parou de comer")
            self.comendo = False

    def dormir(self):
        if self.falando:
            print(f"{self.nome} tem que parar de falar antes de ir dormir")
        elif self.comendo:
            print(f"{self.nome} tem que parar de comer antes de ir dormir")
        else:
            if self.dormindo:
                print(f"{self.nome} já tá dormindo")
            else:
                print(f"{self.nome} foi dormir")
                self.dormindo = True

    def acordar(self):
        if not self.dormindo:
            print(f"{self.nome} já tá acordado")
        else:
            print(f"{self.nome} acordou")
            self.dormindo = False

    def falar(self):
        if self.comendo:
            print(f"{self.nome} tem que parar de comer antes de falar")
        elif self.dormindo:
            print(f"{self.nome} tem que acordar antes de falar")
        else:
            if self.falando:
                print(f"{self.nome} já ta falando")
            else:
                print(f"{self.nome} começou a falar")
                self.falando = True

    def calar(self):
        if not self.falando:
            print(f"{self.nome} já ta calado")
        else:
            print(f"{self.nome} parou de falar")
            self.falando = False
