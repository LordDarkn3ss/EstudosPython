class Pessoa:
    def __init__(self, nome, peso, idade, comendo=False, dormindo=False, falando=False):
        self.nome = nome
        self.peso = peso
        self.idade = idade
        self.comendo = comendo
        self.dormindo = dormindo
        self.falando = falando

    def comer(self):
        if self.falando:
            print(f"{self.nome} tem que parar de falar antes de ir comer")
        elif self.dormindo:
            print(f"{self.nome} tem que acordar antes de ir comer")
        else:
            if self.comendo:
                print(f"{self.nome} já tá comendo")
            else:
                print(f"{self.nome} foi comer")
                self.comendo = True

    def parar_comer(self):
        if not self.comendo:
            print(f"{self.nome} não tá comendo")
        else:
            print(f"{self.nome} parou de comer")
            self.comendo = False

    def dormir(self):
        if self.falando:
            print(f"{self.nome} tem que parar de falar antes de ir dormir")
        elif self.comendo:
            print(f"{self.nome} tem que parar de comer antes de ir dormir")
        else:
            if self.dormindo:
                print(f"{self.nome} já tá dormindo")
            else:
                print(f"{self.nome} foi dormir")
                self.dormindo = True

    def acordar(self):
        if not self.dormindo:
            print(f"{self.nome} já tá acordado")
        else:
            print(f"{self.nome} acordou")
            self.dormindo = False

    def falar(self):
        if self.comendo:
            print(f"{self.nome} tem que parar de comer antes de falar")
        elif self.dormindo:
            print(f"{self.nome} tem que acordar antes de falar")
        else:
            if self.falando:
                print(f"{self.nome} já ta falando")
            else:
                print(f"{self.nome} começou a falar")
                self.falando = True

    def calar(self):
        if not self.falando:
            print(f"{self.nome} já ta calado")
        else:
            print(f"{self.nome} parou de falar")
            self.falando = False

class BankAccount:
        def __init__(self, num, saldo, nome, tipo, ativa=False):
            self.num = num
            self.saldo = saldo
            self.nome = nome
            self.tipo = tipo
            self.ativa = ativa

        def ativar(self):
            if self.ativa:
                print("== ERRO, CONTA JA ATIVA ==")
            else:
                self.ativa = True
                print("== CONTA ATIVADA COM SUCESSO ==")

        def desativar(self):
            if not self.ativa:
                print("== ERRO, CONTA JA DESATIVADA ==")
            else:
                if self.saldo != 0:
                    print("== ERRO, CONTA AINDA COM SALDO ==")
                else:
                    self.ativa = False
                    print("== CONTA DESATIVADA COM SUCESSO ==")

        def depositar(self, valorDp):
            if not self.ativa:
                print("== CONTA INATIVA ==")
            else:
                self.saldo += valorDp
                print("== DEPOSITADO COM SUCESSO ==")

        def sacar(self, valorSq):
            if not self.ativa:
                print("== CONTA INATIVA ==")
            else:
                if valorSq > self.saldo:
                    print("== SALDO INSUFICIENTE ==")
                else:
                    self.saldo -= valorSq
                    print("== SAQUE EFETUADO COM SUCESSO ==")



        def extrato(self):
            if not self.ativa:
                print("== CONTA INATIVA ==")
            else:
                status = ""
                if self.ativa:
                    status = "Ativa"
                else:
                    status = "Desativada"
                print(f"""
========================================
|                                      
|    Conta: {self.num} - {self.tipo}   
|    Dono: {self.nome}                 
|    Status: {status}              
|    Saldo Atual: {self.saldo}         
|                                      
========================================
    
                                    """)




